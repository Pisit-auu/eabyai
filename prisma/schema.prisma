// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  tradeAccounts TradeAccount[]
 
}

model TradeAccount{
  id           Int      @id @default(autoincrement())
  platformAccountId String @unique
  InvestorPassword String
  Server String?
  Leverage String?
  fullname String?
  connect  Connect   @default(false)
  email    String
  user      User    @relation(fields: [email], references: [email])
  platform    Platform @relation(fields: [PlatformName], references: [nameplatform])
  PlatformName String
  licenses          LicenseKey[]
  createdAt    DateTime @default(now())
  isDisconnected    Boolean      @default(false) 
  disconnectedAt    DateTime?
}
model Model {
  id           Int      @id @default(autoincrement())
  nameEA       String   @unique
  symbol       Symbol    @relation(fields: [nameSymbol], references: [nameSymbol])
  nameSymbol   String
  timeframe    Timeframe @relation(fields: [timeframeName], references: [nametimeframe])
  timeframeName String
  platform    Platform @relation(fields: [PlatformName], references: [nameplatform])
  PlatformName String
  filePath     String   
  commission   Float

  active       Active   @default(false)


  downloadCount Int     @default(0) 
  createdAt    DateTime @default(now())
  licenses      LicenseKey[]
}

model Bill {
  id             Int          @id @default(autoincrement())
  isPaid         Boolean      @default(false) 
  expire             Boolean  @default(false) 
  profit    Float        @default(0)    
  exirelicendate DateTime 
  commission Float
  createdAt      DateTime     @default(now())
  licenseId   String
  email String?
  license     LicenseKey @relation(fields: [licenseId], references: [licensekey])
  
}
model LicenseKey {
  id                Int      @id @default(autoincrement())
  licensekey         String   @unique 
  expire             Boolean  @default(false) 
  email String?
  active            Boolean  @default(true)
  expireDate        DateTime?
  tradeAccount      TradeAccount @relation(fields: [platformAccountId], references: [platformAccountId])
  platformAccountId String
  status            Boolean  @default(true)
  deletedAt         DateTime?    
  cancelReason      String?    
  bills       Bill[] 
  model             Model    @relation(fields: [nameEA], references: [nameEA])
  nameEA           String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

enum Connect {
  false
  true
}
enum Active {
  false
  true
}
model Platform {
  id         Int     @id @default(autoincrement())
  nameplatform String  @unique @default("MT5")
  models     Model[]
  tradeAccounts TradeAccount[]
}
model Symbol {
  id         Int     @id @default(autoincrement())
  nameSymbol String  @unique
  models     Model[] 
}

model Timeframe {
  id            Int     @id @default(autoincrement())
  nametimeframe String  @unique
  models        Model[] 
}
model linkModel {
  id            Int     @id @default(autoincrement())
  namefile String @unique
  Pathname String  
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
